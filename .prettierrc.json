{
    "plugins": ["@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "singleAttributePerLine": true
            }
        }
    ],
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true
}
